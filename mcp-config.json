{
  "name": "xinzhi-weather-mcp",
  "version": "1.0.0",
  "description": "心知天气API的MCP服务，提供实时天气查询功能",
  "entrypoint": "server.py",
  "environment": {
    "python": "3.9"
  },
  "dependencies": [
    "mcp>=1.0.0",
    "pydantic>=2.0.0", 
    "aiohttp>=3.9.0",
    "requests>=2.31.0"
  ],
  "tools": [
    {
      "name": "get_weather",
      "description": "查询指定城市的实时天气信息",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "城市名称，如：beijing、shanghai、yulin"
          },
          "public_key": {
            "type": "string",
            "description": "心知天气公钥"
          },
          "private_key": {
            "type": "string", 
            "description": "心知天气私钥"
          }
        },
        "required": ["public_key", "private_key"]
      }
    }
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "default_location": {
        "type": "string",
        "default": "yulin",
        "description": "默认查询城市"
      },
      "timeout": {
        "type": "number", 
        "default": 10,
        "description": "请求超时时间（秒）"
      }
    }
  }
}

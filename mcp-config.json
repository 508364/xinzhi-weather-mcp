{
  "mcpServers": {
    "xinzhi-weather": {
      "command": "python",
      "args": ["server.py"],
      "env": {
        "PYTHONPATH": "."
      },
      "config": {
        "public_key": {
          "type": "string",
          "description": "心知天气公钥",
          "required": true
        },
        "private_key": {
          "type": "string", 
          "description": "心知天气私钥",
          "required": true
        },
        "default_location": {
          "type": "string",
          "description": "默认查询城市",
          "default": "yulin"
        }
      }
    }
  }
}
